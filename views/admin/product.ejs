<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Moon || cart</title>
  <link rel="shortcut icon" href="IMG/logo.png" type="image/x-icon">
  <%- include('./layout/header'); -%>
</head>

<body>
  <%- include('./layout/top-nav', { isAdmin: isAdmin }) -%>




    <section class="category-field">

      <%- include('./layout/left_nav') %>

        <div class="main-content">
          <h2>General <span class="primspan">Views</span> </h2>

          <div class="over_view">
            <div class="product_card"><br>
              <h3>Products</h3>
              <p>
                <%= productcount %>
              </p>
            </div>
            <div class="product_card"><br>
              <h3>Stokes</h3>
              <p>200</p>
            </div>
            <div class="product_card"><br>
              <h3>Purchase</h3>
              <p>20</p>
            </div>
            <div class="product_card"><br>
              <h3>Accounts</h3>
              <p>
                <%= usertotal%>
              </p>
            </div>
          </div>
          <h2>Ordered <span class="primspan">Product</span> </h2>

          <div class="edit_product">
            <table>
              <thead>
                <tr>
                  <th>Id</th>
                  <th class="image">Image</th>
                  <th>Username</th>
                  <th>Contact</th>
                  <th>Product</th>
                  <th>Quantity</th>
                  <th>Total Cost</th>
                  <th>Details</th>
                </tr>
              </thead>
              <tbody>
                <% orders.forEach((order, index,)=> { %>
                  <tr>
                    <td>
                      <%= index %>
                    </td>
                    <td><img src="/uploads/<%= order.product.Image %>" alt="" class="image"></td>
                    <td><%= order.user.name  %></td>
                    <td><% order.user.email %></td>
                    <td>
                      <%= order.product.Title %>
                    </td>
                    <td><%= order.quantity  %></td>
                    <td><p>Gh&#8353; </p> <%= order.totalcost  %></td>
                    <td>
                      <a href="/updateProduct/<%= order.product._id %>" class="update" style="border-right: none;"><i
                          class="fa fa-edit"></i></a>
                    </td>
                    <div class="modal hide_modal">
                      <div class="modal_content">
                        <div>
                          <p>Are you sure you want to delete?</p>
                        </div>
                        <div class="close_delete">
                          <a href="/deleteProduct/<%= order.product._id %>" class="yes">Yes</a>
                          <a href="#" class="close_btn " id="cancle">No</a>
                        </div>
                      </div>
                    </div>
                  </tr>

                  <% }); %>
              </tbody>
            </table>
          </div>

        </div>

    </section>


    <%- include('./layout/down-nav'); -%>

      <div class="footer">

      </div>

      <script src="main.js"></script>


</body>

</html>