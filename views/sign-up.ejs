<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moon | Sign Up-page</title>
    <link rel="shortcut icon" href="IMG/logo.png" type="image/x-icon">

    <%- include('./layout/header'); -%>

</head>

<body>

    <section class="login-page">
        <div class="login-form">

            <div class="carouselContainer">


                <div class="carouselImgs slide1">
                    <img src="products/product-8.jpg" alt="">
                </div>
                <div class="carouselImgs slide2">
                    <img src="products/product-8.jpg" alt="">
                </div>
                <div class="carouselImgs slide3">
                    <img src="products/product-4.jpg" alt="">
                </div>
                <div class="carouselImgs slide4">
                    <img src="products/f3.jpg" alt="">
                </div>

                <span class="prev" id="prev">
                    < </span>
                        <span class="next" id="next">
                            > </span>


            </div>



            <div class="login-card">
                <div class="img">

                    <img src="IMG/MSM_Logo.png" alt="">
                </div>
                <br><br>

                <% if (alert.message.length> 0 ){%>
                    <div class="alert alert-<%= alert.status %>">
                        <p>
                            <%= alert.message %>
                        </p>
                        <button class="messageclose-btn" onclick="this.parentElement.style.display='none';"><i
                                class="fas fa-times"></i></button>
                    </div>
                    <% } %>
                        <form action="/signUp" method="post">
                            <input type="text" name="name" placeholder="Enter Username" class="Username" required>

                            <input type="email" name="email" placeholder="Enter Email" class="email" required>

                            <input type="password" name="password" placeholder="password" class="password" required>

                            <button type="submit" class="button">Get Started</button>


                            <div class="link">
                                <a href="/login">Already have Account Login</a>
                            </div>

            </div>
            </form>

        </div>
    </section>


    <script src="main.js"></script>
</body>

</html>