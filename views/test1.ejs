<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moon Shopping Mall</title>
    <link rel="shortcut icon" href="IMG/logo.png" type="image/x-icon">

    <%- include('./layout/header'); -%>

    <style>
        .pro {
            width: 23%;
            min-width: 250px;
            height: 350px;
        }
    </style>
    <!-- Include Owl Carousel CSS -->
    <link rel="stylesheet" href="./carousel/owl.carousel.min.css">
    <link rel="stylesheet" href="./carousel/owl.theme.default.min.css">
</head>

<body>
  <%- include('./layout/top-nav', { isAdmin: isAdmin }); -%>

  <div class="general_message">
    <%- include('messages', {alert}) %>
    </div>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>

  <section>
    <div class="owl-carousel owl-theme">
      <% products.filter(product => product.Rate > 3).forEach(product => { %>
        <div class="pro">
          <a href="/product-detail/<%= product._id %>">
            <img src="/uploads/<%= product.Image %>" alt="">
            <div class="des">
              <span><%= product.Brand %></span>
              <h5><%= product.Title %></h5>
              <div class="star">
                <% for (let i = 0; i < product.Rate; i++) { %>
                  <i class="fas fa-star"></i>
                <% } %>
              </div>
              <h4>Price: Ghc <%= product.Price.toLocaleString() %></h4>
            </div>
          </a>
          <form action="/add-cart/<%= product._id %>" method="post">
            <button type="submit"><i class="fa fa-shopping-cart"></i></button>
          </form>
        </div>
      <% }); %>
    </div>
  </section>

  <section id="product1" class="section-p1">
    <h2>Featured <span class="primspan"> Products</span></h2>
    <div class="pro-container">
      <% products.forEach((product) => { %>
        <div class="pro">
          <a href="/product-detail/<%= product._id %>">
            <img src="/uploads/<%= product.Image %>" alt="">
            <div class="des">
              <span><%= product.Brand %></span>
              <h5><%= product.Title %></h5>
              <div class="star">
                <% for (let i = 0; i < product.Rate; i++) { %>
                  <i class="fas fa-star"></i>
                <% } %>
              </div>
              <h4>Price: Ghc <%= product.Price.toLocaleString() %></h4>
            </div>
          </a>
          <form action="/add-cart/<%= product._id %>" method="post">
            <button type="submit"><i class="fa fa-shopping-cart"></i></button>
          </form>
        </div>
      <% }); %>
    </div>
  </section>

  <% include('./layout/down-nav', { isAdmin: isAdmin }); %>

  <!-- Include jQuery -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <!-- Include Owl Carousel JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
  <script>
    $(document).ready(function () {
      $('.owl-carousel').owlCarousel({
        loop: true,
        margin: 10,
        nav: true,
        autoplay: true,
        autoplayTimeout: 3000,
        responsive: {
          0: {
            items: 1
          },
          600: {
            items: 3
          },
          1000: {
            items: 5
          }
        }
      });
    });
  </script>
</body>


</html>
